@page
@model IndexModel
@{
    ViewData["Title"] = "Weather Report";
}

<h3>Weather Report</h3>
<div class="row">
<div class="col-md-6">
        <form method="post" asp-page-handler="AddLocations">
        <p><strong> Enter the City:</strong></p>
        <input type="text" name="City" value="@Model.City" placeholder="Enter city" />
        <button type="submit">Search</button>
    </form>
</div>
<div class="col-md-6">
@if (!string.IsNullOrEmpty(Model.WeatherDisplay))
{
    <p><strong>Result:</strong> @Model.WeatherDisplay</p>
}
</div>
</div>
<br/>
<br/>

<div class="row">
    <div class="col-md-6">
        <p>
            <strong>
                Saved Locations
            </strong>
        </p>
        <ul>
            @foreach (var loc in Model.SavedLocations)
            {
                <li>
                    <form asp-page-handler="AddLocations">
                        <input type="hidden" name="City" value="@loc" />
                        <button type="submit">@loc</button>
                    </form>
                </li>
            }
        </ul>
        <form asp-page-handler="ClearAllLocations">
            <button type="submit">Clear</button>
        </form>
    </div>
   
        
    
</div>
